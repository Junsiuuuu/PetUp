{
  "name": "my-desktop-pet",
  "version": "1.0.0",
  "description": "My Cute Desktop Pet",
  "main": "main.js",
  "author": "Junsiuuuu",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac"
  },
  "build": {
    "appId": "com.junsiuuuu.pet",
    "productName": "PetUp",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "runAfterFinish": true
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "files": [
      "**/*",
      "!dist/*",
      "!**/*.map"
    ]
  },
  "keywords": [],
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0"
  },
  "dependencies": {
    "loudness": "^0.4.2",
    "systeminformation": "^5.30.7"
  }
}